{
  "version": 3,
  "name": "Seguipro API Gateway",
  "port": 8080,
  "timeout": "5s",
  "cache_ttl": "300s",
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]"
    },
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allow_headers": ["Content-Type", "Authorization"]
    }
  },
  "endpoints": [
    {
      "endpoint": "/api/login",
      "method": "POST",
      "backend": [
        {
          "host": ["http://backend:3000"],
          "url_pattern": "/auth/login"
        }
      ]
    },
    {
      "endpoint": "/api/users",
      "method": "GET",
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk-url": "",
          "cache": false,
          "disable_jwk_security": true,
          "roles_key": "roles",
          "jwk-urls": [],
          "secret": "janchundia"
        }
      },
      "backend": [
        {
          "host": ["http://backend:3000"],
          "url_pattern": "/users"
        }
      ]
    },
    {
      "endpoint": "/api/requests",
      "method": "GET",
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "secret": "janchundia"
        }
      },
      "backend": [
        {
          "host": ["http://backend:3000"],
          "url_pattern": "/requests"
        }
      ]
    }
  ]
}
